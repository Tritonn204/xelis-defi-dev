{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@xelis/sdk": ["node_modules/@xelis/sdk/dist/esm/index.js"]
    },
    "types": ["vite/client"],
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.d.ts"]
}
